generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int    @id @default(autoincrement())
  nome    String
  idade   Int
  salario Float
}

model Category {
  id       Int       @id @default(autoincrement())
  nome     String
  tamanho  String
  sexo     String
  produtos Product[]  // relação inversa com Product
}

model Supplier {
  id       Int       @id @default(autoincrement())
  nome     String
  email    String    @unique
  contato  String
  produtos Product[]  // relação inversa com Product
}

model Client {
  id      Int    @id @default(autoincrement())
  nome    String
  idade   Int
  sexo    String
  email   String @unique
  contato String
  pedidos Order[] // relação inversa com Order
  avaliacoes Review[] // relação inversa com Review
}

model Product {
  id           Int      @id @default(autoincrement())
  nome         String
  descricao    String
  preco        Float
  estoque      Int
  categoriaId  Int
  categoria    Category @relation(fields: [categoriaId], references: [id])
  fornecedorId Int
  fornecedor   Supplier @relation(fields: [fornecedorId], references: [id])
  pedidos      Order[]  // relação inversa com Order
  avaliacoes   Review[] // relação inversa com Review
}

model Order {
  id         Int      @id @default(autoincrement())
  data       DateTime @default(now())
  quantidade Int
  total      Float
  produtoId  Int
  produto    Product  @relation(fields: [produtoId], references: [id])
  clienteId  Int
  cliente    Client   @relation(fields: [clienteId], references: [id])
}

model Review {
  id        Int      @id @default(autoincrement())
  nota    Int
  comentario String
  produtoId Int
  produto   Product  @relation(fields: [produtoId], references: [id])
  clienteId Int
  cliente   Client   @relation(fields: [clienteId], references: [id])
}